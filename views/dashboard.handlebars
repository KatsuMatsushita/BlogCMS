  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h5><a href="/post/{{post.id}}">{{post.title}} created on {{format_date post.date_created}}</a></h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger del-btn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<!-- submission modal copied from https://www.the-art-of-web.com/javascript/feedback-modal-window/ -->
<p>
  <button class="btn btn-sm" id="open_modal">Create Post</button>
</p>

<div id="modal_wrapper">
  <div id="modal_window">
    <!-- this is a boilerplate for creating the close button for a modal window -->
    <div style="text-align: right;"><a id="close_modal" href="#">close <b>X</b></a></div>
    <!-- the following line sets where the form data should be submitted to, and how it should be sent -->
    <form id="modal_post" accept-charset="UTF-8" action="/api/posts/" method="post">
      <p><label for="title">Title</label></p><br>
      <input type="text" size="48" name="title" id="ptitle" autofocus required><br><br>
      <p><label for="content">Post</label></p><br>
      <input type="text" size="48" name="content" id="pcontent"><br>
      <input type="submit" id="postSubmit">
    </form>
  </div>
</div>

<script src="./js/dashboard.js"></script>
